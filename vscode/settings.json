{
  "vim.useSystemClipboard": true,
  "vim.hlsearch": true,
  "vim.surround": true,
  "vim.leader": "<space>",
  "vim.normalModeKeyBindings": [
    {
      "before": ["<leader>", "d"],
      "after": ["\"", "_", "d"]
    },
    {
      "before": ["<C-d>"],
      "after": ["<C-d>", "z", "z"]
    },
    {
      "before": ["<C-u>"],
      "after": ["<C-u>", "z", "z"]
    },
    {
      "before": ["<C-w>"],
      "commands": ["workbench.action.closeActiveEditor"]
    },
    {
      "before": ["<leader>", "<tab>"],
      "commands": ["workbench.action.nextEditor"]
    },
    {
      "before": ["<leader>", "<S-tab>"],
      "commands": ["workbench.action.previousEditor"]
    },
    {
      "before": ["K"],
      "commands": ["lineBreakInsert"],
      "silent": true
    }
  ],
  "vim.visualModeKeyBindings": [
    {
      "before": ["<leader>", "d"],
      "after": ["\"", "_", "d"]
    }
  ],
  "todohighlight.include": [
    "**/*.js",
    "**/*.jsx",
    "**/*.ts",
    "**/*.tsx",
    "**/*.html",
    "**/*.php",
    "**/*.css",
    "**/*.scss",
    "**/*.vue"
  ],
  "todohighlight.defaultStyle": {
    "color": "white",
    "backgroundColor": "#ffab00",
    "overviewRulerColor": "#ffab00",
    "cursor": "pointer",
    "border": "1px solid #eee",
    "borderRadius": "2px",
    "isWholeLine": false
  },
  "todohighlight.keywords": [
    "DEBUG",
    "REVIEW",
    {
      "text": "TODO",
      "color": "red",
      "border": "1px solid red",
      "borderRadius": "2px", //NOTE: using borderRadius along with `border` or you will see nothing change
      "backgroundColor": "rgba(0,0,0,.2)",
      "isWholeLine": false
    }
  ],
  "todohighlight.keywordsPattern": "TODO|FIXME",
  "editor.renderWhitespace": "boundary",
  "editor.fontFamily": "JetBrains Mono, Consolas, 'Courier New', monospace",
  "workbench.iconTheme": "vscode-icons",
  "javascript.preferences.quoteStyle": "single",
  "typescript.preferences.quoteStyle": "single",
  "colorize.languages": [
    "css",
    "sass",
    "scss",
    "less",
    "postcss",
    "sss",
    "stylus",
    "xml",
    "svg",
    "javascript",
    "vue"
  ],
  "[nginx]": {
    "editor.defaultFormatter": "ahmadalli.vscode-nginx-conf"
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "astro", // Enable .astro
    "typescript", // Enable .ts
    "typescriptreact" // Enable .tsx
  ],
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "vs-kubernetes": {
    "vs-kubernetes.knownKubeconfigs": ["/home/felipe-bueno/.kube/config"],
    "vs-kubernetes.kubeconfig": "/home/felipe-bueno/.kube/config"
  },
  "[xml]": {
    "editor.defaultFormatter": "redhat.vscode-xml"
  },
  "[sql]": {
    "editor.defaultFormatter": "adpyke.vscode-sql-formatter"
  },
  "prettier.jsxSingleQuote": true,
  "prettier.singleQuote": true,
  "security.workspace.trust.untrustedFiles": "open",
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "workbench.colorTheme": "One Dark Pro",
  "[php]": {
    "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
  },
  "[prisma]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "Prisma.prisma"
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true,
    "**/.hg/store/**": true
  },
  "editor.fontLigatures": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "explorer.compactFolders": false,
  "[python]": {
    "editor.defaultFormatter": "ms-python.python",
    "editor.formatOnType": true
  },
  "[c]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },
  "idf.espIdfPath": "/home/felipe-bueno/esp/esp-idf",
